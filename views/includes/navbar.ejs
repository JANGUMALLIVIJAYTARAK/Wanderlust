<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }

  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 2rem 0.5rem 2rem; /* Adjust padding to ensure placeholder is visible */
    font-size: 1rem;
    width: 100%; /* Ensure the input field takes full width */
  }

  /* Navbar styling */
  .navbar {
    transition: background-color 0.3s ease;
  }

  .navbar-nav {
    display: flex;
    align-items: center;
  }

  /* For the mobile view (collapsed navbar) */
  @media (max-width: 991px) {
    .navbar-collapse {
      background-color: #f1f1f1; /* Grey background */
    }

    .navbar-nav {
      width: 100%;
      justify-content: space-between;
      padding: 0.5rem 0;
    }

    .navbar-nav a {
      width: 100%;
      text-align: center;
      padding: 0.5rem 0;
    }

    /* Ensure the search button aligns well in mobile view */
    .search-btn {
      width: 100%;
      margin-top: 0.5rem;
      border-radius: 25px;
    }

    .search-inp {
      width: 100%;
      padding: 0.5rem 2rem; /* Reduce padding for better placeholder visibility */
    }
  }

  /* For larger screens */
  @media (min-width: 992px) {
    .navbar-nav {
      align-items: center;
    }

    .navbar-nav a {
      padding: 0 1rem;
    }
  }
</style>

<nav class="navbar navbar-expand-lg bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <div class="navbar-nav me-auto">
        <a class="nav-link" href="/listings">Explore</a>
      </div>
      <div class="navbar-nav ms-auto">
        <form class="d-flex" id="searchForm">
          <input class="form-control me-2 search-inp" type="search" placeholder="Search destinations" id="searchInput">
          <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
        </form>
      </div>
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if(!currUser) { %>
          <a class="nav-link" href="/signup"><b>Sign Up</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %>
        <% if(currUser) { %>
          <a class="nav-link" href="/logout"><b>Log out</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

<script>
  // Handle search form submission
  document.getElementById('searchForm').addEventListener('submit', function (e) {
    e.preventDefault(); // Prevent default form submission
    const searchTerm = document.getElementById('searchInput').value.trim().toLowerCase();
    window.location.href = `/listings?search=${encodeURIComponent(searchTerm)}`; // Redirect with search query
  });
</script>